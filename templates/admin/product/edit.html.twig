{% extends "admin/layout.html.twig" %}
{% block title %}
    Edittion de {{ product.name }}
{% endblock %}

{% block body %}
    <h1>Editer le produit {{ product.name }}</h1>
    <hr><br>
    {{ form_start(formView) }}
    {{ form_errors(formView) }}
    <div class="row">
        <div class="col">
            {{ form_row(formView.name) }}
            {{ form_row(formView.price) }}
            {{ form_row(formView.isVisible) }}
        </div>
        <div class="col">
            {{ form_row(formView.mainPicture) }}
            {{ form_row(formView.category) }}
            {{ form_row(formView.shortDescription) }}
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i>
        Enregistrer
    </button>
    {{ form_end(formView) }}
    <br>
    <a href="{{ path('admin_index') }}">Retourner Ã  la page d'accueil </a>
{% endblock %}
