{% extends "base.html.twig" %}

{% block title %}
    Votre panier
{% endblock %}

{% block body %}
    <h1>Votre panier</h1>
    <table class="table">
        <thead>
        <tr>
            <td>Produit</td>
            <td>Prix</td>
            <td>Qauntit√©</td>
            <td>Total</td>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.product.name }}</td>
                <td>{{ item.product.price }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.total }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
          <tr>
              <td colspan="3">Total : </td>
              <td>{{ total }}</td>
          </tr>
        </tfoot>
    </table>


{% endblock %}