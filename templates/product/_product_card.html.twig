<div class="card">
    <img src="{{ product.mainPicture }}" class="img-fluid" alt="Image du produit">
    <div class="card-body">
        <h5 class="card-title">{{ product.name }}({{ product.price | amount }}) </h5>
        <span class="badge badge-info">
                                {{ product.category.name }}
                            </span>
        <p class="card-text">{{ product.shortDescription | description }}</p>
        <a href="{{ path('product_show', {'category_slug':product.category.slug, 'product_slug':product.slug}) }}"
           class="btn btn-primary btn-sm">DÃ©tails</a>
        <a href="{{ path('cart_add', {'id': product.id} ) }}" class="btn btn-success btn-sm">Ajouter</a>
    </div>
</div>
