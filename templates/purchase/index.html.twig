{% extends 'base.html.twig' %}
{% block title %}
    Mes commandes
{% endblock %}

{% block body %}
    <h2>Mes commandes </h2>
    <table class="table">
        <thead>
        <tr>
            <th>Numéro</th>
            <th>Adresse de commande</th>
            <th>Date de commande</th>
            <th>Produits</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% for purchase in purchases %}
            <tr>
                <td>{{ purchase.id }}</td>
                <td>{{ purchase.address }}<br>{{ purchase.postalCode }}<br>{{ purchase.city }} </td>
                <td>{{ purchase.purchasedAt | date ('d:m:Y H:i') }}</td>
                <td>
                   <ul>
                    {% for product in  purchase.products %}
                   <li> {{ product.name }} ({{ product.price/100  }}€) </li>
                    {% endfor %}
                   </ul>
                </td>
                <td>{{ purchase.total/100 }} </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Total des commndes:</td>
            <td colspan="3">{{ 30000 }}</td>
        </tr>
        </tfoot>
    </table>

{% endblock %}