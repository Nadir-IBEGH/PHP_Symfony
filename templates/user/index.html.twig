{% extends 'admin/layout.html.twig' %}

{% block title %}Hello userController!{% endblock %}


{% block body %}

    <h1>Lsite des utilisateurs</h1>
    <hr>
    <br><br>
    <div class="row">
        <div class="col-4">Nombre d'utilisateurs <strong>{{ numberUsers }}</strong></div>
        {# <div class="col-4">Nombre de produits visible <strong>{{ NumberProductVisible }}</strong></div>
        <div class="col-4">Nombre de produits non visible <strong>{{ NumberProductNotVisible }}</strong></div> #}
    </div>
    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Nom complet</th>
            <th scope="col">adresse email</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.fullName }}</td>
            <td>{{ user.email }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
